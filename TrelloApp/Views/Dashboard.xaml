    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    >
            <Border 
                BorderBrush="White" 
                BorderThickness="1" 
                Grid.Column="1"
                CornerRadius="25"
                Width="200"
                >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                            Text="Name"
                            FontSize="14"
                            Foreground="White"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="10 0 0 0" 
                            />
                    <Border
                            Grid.Column="1"
                            BorderBrush="White"
                            BorderThickness="1"
                            CornerRadius="25"
                            Width="48"
                            Height="48"
                            HorizontalAlignment="Right"
                            >
                        <Ellipse>
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Resources/userAvatar.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Border>
                </Grid>
            </Border>
        </StackPanel>
        <Grid Grid.Row="1">
            <!-- ItemsSource="{Binding Projects}" -->
            <DataGrid 
                AutoGenerateColumns="False" 
                Grid.Row="1"
                Background="#1d2125">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="User Projects">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <WrapPanel Orientation="Horizontal">
                                    <Border x:Name="firstCellBorder"
                                        BorderBrush="White"
                                        BorderThickness="1"
                                        CornerRadius="25"
                                        Width="48"
                                        Height="48"
                                        HorizontalAlignment="Left"
                                        Margin="-25,0,0,0" Background="#1d2125">
                                        <Ellipse>
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="/Resources/plus.png"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                    </Border>
                                    <Border x:Name="otherCellBorder" 
                                        BorderBrush="White" 
                                        BorderThickness="1" 
                                        CornerRadius="25" 
                                        Margin="2">
                                        <!--Binding projectModel, Mode TwoWay-->
                                        <TextBlock Text="Project Name" Foreground="White" FontSize="14"/>
                                    </Border>
                                </WrapPanel>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsFirstCell}" Value="False">
                                        <Setter TargetName="firstCellBorder" Property="Visibility" Value="Collapsed"/>
                                        <Setter TargetName="otherCellBorder" Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsFirstCell}" Value="True">
                                        <Setter TargetName="firstCellBorder" Property="Visibility" Value="Visible"/>
                                        <Setter TargetName="otherCellBorder" Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
