<Window x:Class="TrelloApp.Views.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:projectVM="clr-namespace:TrelloApp.ViewModels"
        Title="Dashboard" Height="450" Width="800" Background="#1d2125">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    >
            <Border 
                BorderBrush="White" 
                BorderThickness="1" 
                Grid.Column="1"
                CornerRadius="25"
                Width="200"
                >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                            Text="Name"
                            FontSize="14"
                            Foreground="White"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="10 0 0 0" 
                            />
                    <Border
                            Grid.Column="1"
                            BorderBrush="White"
                            BorderThickness="1"
                            CornerRadius="25"
                            Width="48"
                            Height="48"
                            HorizontalAlignment="Right"
                            >
                        <Ellipse>
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Resources/userAvatar.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Border>
                </Grid>
            </Border>
        </StackPanel>

        <Grid
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border
                    BorderBrush="White" 
                    BorderThickness="1" 
                    Grid.Column="0"
                    Grid.Row="0"
                    CornerRadius="25"
                    Margin="10">
                <Border
                        Grid.Column="1"
                        BorderBrush="White"
                        BorderThickness="1"
                        CornerRadius="25"
                        Width="48"
                        Height="48"
                        HorizontalAlignment="Center"
                        >
                    <Ellipse Width="25" Height="25">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Resources/plus.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Border>
            </Border>
            <Border
                    BorderBrush="White" 
                    BorderThickness="1" 
                    Grid.Column="1"
                    Grid.Row="0"
                    CornerRadius="25"
                    Margin="10"
                >
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="White"
                    Text="Board Name"
                    FontSize="14"
                    />
            </Border>
        </Grid>
    </Grid>
</Window>