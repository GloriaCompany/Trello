<Window x:Class="TrelloApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrelloApp"
        xmlns:customControls="clr-namespace:TrelloApp.Views.CustomControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="516" Background="#1d2125">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border 
                BorderBrush="White" 
                BorderThickness="1" 
                Grid.Column="1"
                CornerRadius="15"
                Width="225"
                Height="30"
                HorizontalAlignment="Right"
                >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Grid.Column="0">
                    <Border
                        BorderBrush="White"
                        BorderThickness="1"
                        CornerRadius="15"
                        Width="28"
                        Height="28"
                        HorizontalAlignment="Left"
                        Grid.Column="0">
                        <Ellipse>
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Resources/userAvatar.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Border>
                    <Border
                        BorderBrush="White"
                        BorderThickness="1"
                        CornerRadius="25"
                        Width="28"
                        Height="28"
                        HorizontalAlignment="Left"
                        Grid.Column="0"
                        Margin="-17.5,0,0,0">
                        <Ellipse>
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Resources/userAvatar.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Border>
                    <Border
                        BorderBrush="White"
                        BorderThickness="1"
                        CornerRadius="25"
                        Width="28"
                        Height="28"
                        HorizontalAlignment="Left"
                        Grid.Column="0"
                        Margin="-17.5,0,0,0">
                        <Ellipse>
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Resources/userAvatar.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Border>
                    <Border
                        BorderBrush="White"
                        BorderThickness="1"
                        CornerRadius="25"
                        Width="28"
                        Height="28"
                        HorizontalAlignment="Left"
                        Grid.Column="0"
                        Margin="-17.5,0,0,0" Background="#1d2125">
                        <Ellipse>
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Resources/plus.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Border>
                </StackPanel>
                <TextBlock 
                        Text="Name"
                        FontSize="10"
                        Foreground="White"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left" 
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        />
                <Border
                       Grid.Column="1"
                       BorderBrush="White"
                       BorderThickness="1"
                       CornerRadius="25"
                       Width="28"
                       Height="28"
                       HorizontalAlignment="Right"
                       >
                    <Ellipse>
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Resources/userAvatar.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Border>
            </Grid>
        </Border>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <customControls:ColumnControl
                Grid.Row="0"
                Grid.Column="0"
                Margin="10"
                />
            <customControls:ColumnControl
                Grid.Row="0"
                Grid.Column="1"
                Margin="10"
                />
            <customControls:ColumnControl
                Grid.Row="0"
                Grid.Column="2"
                Margin="10"
                />
            <customControls:CustomButton
                Grid.Row="1"
                Grid.Column="0"
                Text="+ Add Column"
                Margin="10"
                />
        </Grid>
    </Grid>
</Window>
