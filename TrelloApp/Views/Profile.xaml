<Window x:Class="TrelloApp.Views.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrelloApp.Views"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Profile" Height="250" Width="400" Background="#1d2125">
    <Grid>
        <Border 
                BorderBrush="White" 
                BorderThickness="1" 
                CornerRadius="25"
                Width="250"
                Height="175"
                Padding="5"
                >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <Border
                        BorderBrush="White"
                        BorderThickness="1"
                        CornerRadius="25"
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Center"
                        >
                    <Ellipse>
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Resources/userAvatar.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Border>
                <StackPanel Orientation="Horizontal"
                            Grid.Row="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            >
                    <TextBlock Text="Login"
                           Grid.Row="1"
                           Foreground="White"
                           FontSize="12"
                           />
                    <Image Source="/Resources/edit-16.png"
                           Grid.Row="1"
                           Width="10"
                           Height="10"
                           Margin="10,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Grid.Row="2"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            >
                    <TextBlock Text="Email"
                           Grid.Row="1"
                           Foreground="White"
                           FontSize="12"
                           />
                    <Image Source="/Resources/edit-16.png"
                           Grid.Row="1"
                           Width="10"
                           Height="10"
                           Margin="10,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Grid.Row="3"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            >
                    <TextBlock Text="Password"
                           Grid.Row="1"
                           Foreground="White"
                           FontSize="12"
                           />
                    <Image Source="/Resources/edit-16.png"
                           Grid.Row="1"
                           Width="10"
                           Height="10"
                           Margin="10,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Grid.Row="4"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            >
                    <TextBlock Text="Avatar"
                           Grid.Row="1"
                           Foreground="White"
                           FontSize="12"
                           />
                    <Image Source="/Resources/edit-16.png"
                           Grid.Row="1"
                           Width="10"
                           Height="10"
                           Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>