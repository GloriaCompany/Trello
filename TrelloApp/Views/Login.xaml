<Page x:Class="TrelloApp.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:customControls="clr-namespace:TrelloApp.Views.CustomControls"
        xmlns:viewModels="clr-namespace:TrelloApp.ViewModels.UserVM"
        xmlns:viewModelBase="clr-namespace:TrelloApp.ViewModels.Base"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="400" Background="#1d2125">
    <Page.DataContext>
        <viewModels:LoginViewModel>
            <viewModels:LoginViewModel.UserRepository>
                <viewModels:UserRepository>
                    <viewModels:UserRepository.DbContext>
                        <viewModelBase:TrelloDataContext/>
                    </viewModels:UserRepository.DbContext>
                </viewModels:UserRepository>
            </viewModels:LoginViewModel.UserRepository>
        </viewModels:LoginViewModel>
    </Page.DataContext>
    <Grid x:Name="PageContainer">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Авторизація / Login" 
               Grid.Row="0" 
               Grid.Column="0" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Bottom" 
               Foreground="White" 
               FontSize="14"/>
        <customControls:CustomInput
            Grid.Row="1"
            Width="250"
            Height="35"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            x:Name="InputLogin"
            Placeholder="Login"
            Text="{Binding Username, Mode=TwoWay}"
            />
        <customControls:CustomInput
            Grid.Row="2"
            Width="250"
            Height="35"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            x:Name="InputPassword"
            Placeholder="Password"
            Text="{Binding Password, Mode=TwoWay}"
            />
        <customControls:CustomButton 
            Text="LOGIN" 
            Width="180" 
            Height="35"
            Grid.Row="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            x:Name="BtnLogin"
            Command="{Binding LoginCommand}"
            />
        <customControls:CustomButton 
            Text="REGISTER" 
            Width="180" 
            Height="35"
            Grid.Row="4"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            x:Name="BtnRegister"
            Click="BtnRegister_Click"
            />
        <customControls:CustomButton 
            Text="CREATE DATABASE" 
            Width="180" 
            Height="35"
            Grid.Row="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            x:Name="BtnCreateDatabase"
            Click="BtnCreateDatabase_Click"
            Visibility="Hidden"
            />
    </Grid>
</Page>